package com.bridgeit.Test;

import java.util.logging.Logger;

import org.slf4j.LoggerFactory;

/**
 * Hello world!
 *
 */
public class App 
{private final Logger slf4jLogger = (Logger) LoggerFactory.getLogger(App.class);

/**
 * Print hello in log.
 * 
 * @param name
 */
public void sayHello(String name) {
  //  slf4jLogger.info("Hi, {}", name);
    slf4jLogger.info("Welcome to the HelloWorld example of SLF4J");
}

/**
 * @param args
 */
public static void main(String[] args) {
    App slf4jHello = new App();
    slf4jHello.sayHello("srccodes.com");
}
}